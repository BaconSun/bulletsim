<launch>
  <arg name="make_sim_frame" default="true"/>
  
  <node pkg="rosbag" type="play" name="rosbag" args="/home/alex/bagfiles/cameras_points.bag" /> 

  <node name="merger" pkg="binary_symlinks" type="cloud_merger_node" output="screen"
  			args="--inputTopic1=/camera/rgb/points
  						--inputTopic2=/camera_top/depth_registered/points 
  						--outputTopic=/merger 
  						--SVDCalibration 1 
  						--minCorrFraction 0.6 
  						--chessBoardWidth 6 
  						--chessBoardHeight 7 
  						--squareSize 0.108
  						--imageCalibration 0 
  						--ICPCalibration 0" />
  
  <group if="$(arg make_sim_frame)">
    <node name="sim_kinect_frame_publisher" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 1 head_mount_kinect_ir_link camera_link 10"/>
  </group>
  
</launch>

--inputTopic1=/camera/rgb/points --inputTopic2=/camera_top/depth_registered/points --outputTopic=/merger --SVDCalibration 1 --minCorrFraction 0.6 --chessBoardWidth 6 --chessBoardHeight 7 --squareSize 0.108 --imageCalibration 0 --ICPCalibration 0
